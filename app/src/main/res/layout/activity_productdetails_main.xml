<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

  <!-- Product Image -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:orientation="horizontal"
      android:layout_marginTop="24dp"
      android:paddingStart="16dp"
      android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/btnFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Product Details"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />
  </LinearLayout>
  <ImageView
      android:id="@+id/imageProduct"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:scaleType="centerCrop"
      android:src="@drawable/baseline_percent_24" />

  <!-- Header -->


  <!-- Scroll content -->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <!-- Category and Rating -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female's Style"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 4.5"
            android:textSize="14sp"
            android:textColor="#FFA000" />
      </LinearLayout>

      <!-- Title -->
      <TextView
          android:id="@+id/tvProductName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Light Brown Jacket"
          android:textSize="20sp"
          android:textStyle="bold"
          android:layout_marginTop="4dp" />

      <!-- Product Detail Label -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Product Details"
          android:textSize="16sp"
          android:textStyle="bold"
          android:layout_marginTop="12dp" />

      <!-- Description -->
      <TextView
          android:id="@+id/tvDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
          android:textSize="14sp"
          android:layout_marginTop="6dp" />

      <!-- Stock -->
      <TextView
          android:id="@+id/tvStock"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Stock: 50"
          android:textSize="14sp"
          android:textColor="#888888"
          android:layout_marginTop="8dp" />

      <!-- Select Size -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Select Size:"
          android:textStyle="bold"
          android:layout_marginTop="16dp" />

      <!-- Dynamic Size Container -->
      <LinearLayout
          android:id="@+id/sizeContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:padding="8dp">
        <!-- You can dynamically add buttons for sizes here -->
      </LinearLayout>

    </LinearLayout>
  </ScrollView>

  <!-- Bottom Cart Section -->
  <LinearLayout
      android:id="@+id/cartContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/cart_container_background"
      android:orientation="horizontal"
      android:padding="16dp"
      android:gravity="center_vertical"
      android:elevation="4dp">

    <!-- Total Price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Total Price"
          android:textColor="#888888"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/tvPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="$83.97"
          android:textColor="#000000"
          android:textSize="18sp"
          android:textStyle="bold" />
    </LinearLayout>
<!--    Add to cart-->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:text="Add To Cart"

        android:textColor="@color/black"
        android:textAllCaps="false"
        android:backgroundTint="#C8BFBA"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:drawableStart="@drawable/baseline_shopping_bag_24"
        android:drawablePadding="8dp" />
    <!-- Add to Cart -->
    <Button
        android:id="@+id/btnBuyNow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Buy Now"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#6F4E37"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:drawableStart="@drawable/baseline_shopping_bag_24"
        android:drawablePadding="8dp" />
  </LinearLayout>

</LinearLayout>

