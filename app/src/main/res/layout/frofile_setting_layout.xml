<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <!-- Nút quay lại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    android:layout_gravity="start"
                    android:contentDescription="Back" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SETTING"
                    android:textStyle="bold"
                    android:fontFamily="@font/poetsenone"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linelayoutProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_key_brown" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Password Manager "
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:text="CHANGE"
                    android:src="@drawable/right_brown" />
            </LinearLayout>

            <!-- Gạch ngang -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#DDD" />
            <LinearLayout
                android:id="@+id/linelayoutPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card_brown" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Delete Account "
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:text="CHANGE"
                    android:src="@drawable/right_brown" />
            </LinearLayout>

            <!-- Gạch ngang -->
        </LinearLayout>
</LinearLayout>
