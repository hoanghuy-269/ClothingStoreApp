<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_coupon_card"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCouponCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME200"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvCouponSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add items worth $2 more to unlock"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/baseline_percent_24" />

        <TextView
            android:id="@+id/tvCouponDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get 50% OFF"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COPY CODE"
        android:textAllCaps="true"
        android:backgroundTint="#F5F1EF"
        android:textColor="#6B4C35"
        android:layout_marginTop="12dp" />
</LinearLayout>
