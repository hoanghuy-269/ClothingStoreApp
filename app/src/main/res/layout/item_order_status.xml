<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgStatusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Placed"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/imgStatusIcon"
        app:layout_constraintTop_toTopOf="@id/imgStatusIcon"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvStatusTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="23 Aug 2023, 04:25 PM"
        android:textSize="12sp"
        android:textColor="#777"
        app:layout_constraintStart_toStartOf="@id/tvStatusTitle"
        app:layout_constraintTop_toBottomOf="@id/tvStatusTitle"
        app:layout_constraintEnd_toEndOf="@id/tvStatusTitle"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
