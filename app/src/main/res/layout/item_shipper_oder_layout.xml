<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="6dp"
    android:radius="12dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Phần thông tin đơn hàng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/txtMaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn: #123456"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp" />

<!--            <TextView-->
<!--                android:id="@+id/txtProductName"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Sản phẩm: Áo Hoodie"-->
<!--                android:textColor="#555555"-->
<!--                android:textSize="13sp" />-->

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: 123 Lê Lợi, TP.HCM"
                android:textColor="#444444"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đang giao"
                android:textStyle="italic"
                android:textColor="#FF9800"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txttotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng: 83.97₫"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:textSize="15sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/btnHoanThanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:textSize="13sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
