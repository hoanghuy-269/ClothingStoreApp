<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>
    <style name="RoundedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    <style name="FilterChip" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">#6B3E26</item>
        <item name="android:textColor">#6B3E26</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="FilterChipSelected" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">#6B3E26</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40%</item>
    </style>


</resources>